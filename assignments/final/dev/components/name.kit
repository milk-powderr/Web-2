<section class="site-grid name-block__section">

    <h2 class="name-block__title">Create An Account</h2>

<div class="name-block__grid">

    <div class="wrapper option-1 option-1-1">

        <ol class="c-stepper-name">

          <li class="c-stepper-name1__item">
            <h3 class="c-stepper-name1__title">Create Account</h3>
          </li>

          <li class="c-stepper-name2__item">
            <h3 class="c-stepper-name2__title">Terms & Condition</h3>
          </li>

          <li class="c-stepper-name3__item">
            <h3 class="c-stepper-name3__title">Confirmation</h3>
          </li>

        </ol>
      </div>

      <div class="name-block__input"> 

    <div class="name__input"> 
        <input class="first-name" type="text" placeholder="First Name">
       </div>

    <div class="name__input"> 
        <input class="last-name" type="text" placeholder="Last Name">
       </div>

    <div class="name__input"> 
        <input class="date-month" type="date" placeholder="DD/MM/YYYY">
       </div>

    <div class="name__input"> 
        <input class="email" type="text" placeholder="Email Address">
       </div>

    <div class="name__input"> 
        <input class="phone" type="text" placeholder="Phone Number">
       </div>

    <div class="name__input"> 
        <input class="pass" type="text" placeholder="Password">
       </div>

       <div class="name__input"> 
        <input class="c-pass" type="text" placeholder="Confirm Password">
       </div>

      </div>
</div>

<div>
    <a class="submit__button" href="#">Submit</a>
   </div>

  </section>